          }
        }
      }
    },
    "/api/ScaleEvents/{scaleGroup}": {
      "get": {
        "tags": [
          "ScaleEvents"
        ],
        "operationId": "ListScheduledEvents",
        "produces": [
          "text/plain",
          "application/json",
          "text/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "scaleGroup",
            "required": true,
            "type": "string"
          },
          {
            "in": "query",
            "name": "activeOnly",
            "type": "boolean",
            "default": false
          },
          {
            "in": "query",
            "name": "fromRegion",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/ScheduledScaleEvent"
              }
            }
          },
          "default": {
            "description": "Error",
            "schema": {
              "$ref": "#/definitions/ProblemDetails"
            }
          }
        }
      }
    },
    "/api/ScaleEvents/{scaleGroup}/{eventId}": {
      "get": {
        "tags": [
          "ScaleEvents"
        ],
        "operationId": "GetScheduledEvent",
        "produces": [
          "text/plain",
          "application/json",
          "text/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "scaleGroup",
            "required": true,
            "type": "string"
          },
          {
            "in": "path",
            "name": "eventId",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/ScheduledScaleEvent"
            }
          },
          "default": {
            "description": "Error",
            "schema": {
              "$ref": "#/definitions/ProblemDetails"
            }
          }
        }
      },
      "put": {
        "tags": [
          "ScaleEvents"
        ],
        "operationId": "SaveScaleEvent",
        "consumes": [
          "application/json-patch+json",
          "application/json",
          "text/json",
          "application/*+json"
        ],
        "produces": [
          "text/plain",
          "application/json",
          "text/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "scaleGroup",
            "required": true,
            "type": "string"
          },
          {
            "in": "path",
            "name": "eventId",
            "required": true,
            "type": "string",
            "format": "uuid"
          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/ScaleEvent"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/ScheduledScaleEvent"
            }
          },
          "202": {
            "description": "Success"
          },
          "204": {
            "description": "Success"
          },
          "default": {
            "description": "Error",
            "schema": {
              "$ref": "#/definitions/ProblemDetails"
            }
          }
        }
      },
      "delete": {
        "tags": [
          "ScaleEvents"
        ],
        "operationId": "DeleteScaleEvent",
        "produces": [
          "text/plain",
          "application/json",
          "text/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "scaleGroup",
            "required": true,
            "type": "string"
          },
          {
            "in": "path",
            "name": "eventId",
            "required": true,
            "type": "string",
            "format": "uuid"
          }
        ],
        "responses": {
          "204": {
            "description": "Success"
          },
          "202": {
            "description": "Success"
          },
          "default": {
            "description": "Error",
            "schema": {
              "$ref": "#/definitions/ProblemDetails"
            }
          }
        }
      }
    },
    "/api/ScaleGroups/{scaleGroup}": {
      "get": {
        "tags": [
          "ScaleGroups"
        ],
        "operationId": "GetCurrentState",
        "produces": [
          "text/plain",
          "application/json",
          "text/json"
        ],
        "parameters": [
          {
            "in": "path",
            "name": "scaleGroup",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "$ref": "#/definitions/ScaleGroupState"
            }
          },
          "default": {
            "description": "Error",
            "schema": {
              "$ref": "#/definitions/ProblemDetails"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "ProblemDetails": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "status": {
          "format": "int32",
          "type": "integer"
        },
        "detail": {
          "type": "string"
        },
        "instance": {
          "type": "string"
        },
        "extensions": {
          "type": "object",
          "additionalProperties": {
            "type": "object"
          },
          "readOnly": true
        }
      }
    },
    "ScaleSetRunbookConfiguration": {
      "required": [
        "automationAccountName",
        "runbookName"
      ],
      "type": "object",
      "properties": {
        "automationAccountName": {
          "type": "string"
        },
        "runbookName": {
          "type": "string"
        },
        "scaleSetName": {
          "type": "string"
        }
      }
    },
    "ScaleSetConfiguration": {
      "required": [
        "autoscaleSettingsResourceId",
        "loadBalancerResourceId",
        "name",
        "profileName"
      ],
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "autoscaleSettingsResourceId": {
          "type": "string"
        },
        "profileName": {
          "type": "string"
        },
        "loadBalancerResourceId": {
          "type": "string"
        },
        "healthPortPort": {
          "format": "int32",
          "maximum": 65535,
          "minimum": 1,
          "type": "integer"
        },
        "requestsPerInstance": {
          "format": "int32",
          "maximum": 1000000000,
          "minimum": 0,
          "type": "integer"
        },
        "minInstanceCount": {
          "format": "int32",
          "maximum": 1000,
          "minimum": 1,
          "type": "integer"
        },
        "reservedInstances": {
          "format": "double",
          "type": "number"
        },
        "runbook": {
          "$ref": "#/definitions/ScaleSetRunbookConfiguration"
        }
      }
    },
    "CosmosDbDataPlaneConnection": {
      "required": [
        "accountName",
        "databaseName"
      ],
      "type": "object",
      "properties": {
        "accountName": {
          "type": "string"
        },
        "databaseName": {
          "type": "string"
        },
        "containerName": {
          "type": "string"
        }
      }
    },
    "CosmosDbControlPlaneConnection": {
      "required": [
        "accountResurceId",
        "databaseName"
      ],
      "type": "object",
      "properties": {
        "accountResurceId": {
          "type": "string"
        },
        "databaseName": {
          "type": "string"
        },
        "containerName": {
          "type": "string"
        }
      }
    },
    "CosmosConfiguration": {
      "required": [
        "name"
      ],
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "dataPlaneConnection": {
          "$ref": "#/definitions/CosmosDbDataPlaneConnection"
        },
        "controlPlaneConnection": {
          "$ref": "#/definitions/CosmosDbControlPlaneConnection"
        },
        "requestUnitsPerRequest": {
          "format": "double",
          "type": "number"
        },
        "minimumRU": {
          "format": "int32",
          "type": "integer"
        },
        "maximumRU": {
          "format": "int32",
          "type": "integer"
        }
      }
    },
    "ScaleGroupRegion": {
      "required": [
        "regionName",
        "scaleSets"
      ],
      "type": "object",
      "properties": {
        "regionName": {
          "pattern": "^[\\d\\w\\s-]*$",
          "type": "string"
        },
        "scaleSets": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ScaleSetConfiguration"
          }
        },
        "cosmos": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CosmosConfiguration"
          }
        },
        "scaleSetPrescaleLeadTime": {
          "format": "date-span",
          "type": "string"
        },
        "cosmosDbPrescaleLeadTime": {
          "format": "date-span",
          "type": "string"
        },
        "maxScale": {
          "format": "int32",
          "type": "integer"
        }
      }
    },
    "AutomationAccount": {
      "required": [
        "name",
        "resourceId"
      ],
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "resourceId": {
          "type": "string"
        }
      }
    },
    "ScaleGroupDefinition": {
      "required": [
        "regions"
      ],
      "type": "object",
      "properties": {
        "regions": {
          "minLength": 1,
          "type": "array",
          "items": {
            "$ref": "#/definitions/ScaleGroupRegion"
          }
        },
        "cosmos": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/CosmosConfiguration"
          }
        },
        "cosmosDbPrescaleLeadTime": {
          "format": "date-span",
          "type": "string"
        },
        "automationAccounts": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/AutomationAccount"
          }
        },
        "oldEventsAge": {
          "format": "date-span",
          "type": "string"
        }
      }
    },
    "FeatureFlagsConfiguration": {
      "type": "object",
      "properties": {
        "resourceScallersEnabled": {
          "type": "boolean"
        }
      }
    },
    "RegionScaleValue": {
      "required": [
        "name"
      ],
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "scale": {
          "format": "int32",
          "maximum": 1000000,
          "minimum": 1,
          "type": "integer"
        }
      }
    },
    "ScheduledScaleEvent": {
      "type": "object",
      "properties": {
        "id": {
          "format": "uuid",
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "requiredScaleAt": {
          "format": "date-time",
          "type": "string"
        },
        "estimatedScaleUpAt": {
          "format": "date-time",
          "type": "string"
        },
        "startScaleDownAt": {
          "format": "date-time",
          "type": "string"
        },
        "regionConfig": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RegionScaleValue"
          }
        }
      }
    },
    "ScaleEvent": {
      "required": [
        "name",
        "regionConfig"
      ],
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "requiredScaleAt": {
          "format": "date-time",
          "type": "string"
        },
        "startScaleDownAt": {
          "format": "date-time",
          "type": "string"
        },
        "regionConfig": {
          "minLength": 1,
          "type": "array",
          "items": {
            "$ref": "#/definitions/RegionScaleValue"
          }
        }
      }
    },
    "ScaleRegionState": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "wasScaledUpAt": {
          "format": "date-time",
          "type": "string"
        },
        "willScaleDownAt": {
          "format": "date-time",
          "type": "string"
        },
        "scale": {
          "format": "double",
          "type": "number"
        },
        "requestedScale": {
          "format": "int32",
          "type": "integer"
        },
        "scaleSetState": {
          "type": "object",
          "additionalProperties": {
            "format": "double",
            "type": "number"
          }
        }
      }
    },
    "ScaleGroupState": {
      "type": "object",
      "properties": {
        "regions": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/ScaleRegionState"
          }
        }
      }
    }
  }
}