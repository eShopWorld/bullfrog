          },
          {
            "in": "body",
            "name": "body",
            "schema": {
              "$ref": "#/definitions/ScaleGroupDefinition"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "default": {
            "description": "Error",
